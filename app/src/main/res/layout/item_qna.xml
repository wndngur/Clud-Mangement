<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Type Badge and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Type Badge (Q&A or FAQ) -->
            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q&amp;A"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="?attr/colorPrimary"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="8dp"/>

            <!-- Private Badge (Q&A Only) -->
            <TextView
                android:id="@+id/tvPrivateBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#FF5722"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>

            <!-- Asker Name (Q&A Only) -->
            <TextView
                android:id="@+id/tvAskerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="질문자"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone"/>

            <!-- Date -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025.12.03"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>

            <!-- Settings Button (Admin Only) -->
            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/ic_menu_more"
                android:contentDescription="설정"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Question -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q. "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"/>

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="질문 내용"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <!-- Answer (if answered) -->
        <LinearLayout
            android:id="@+id/llAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A. "
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>

            <TextView
                android:id="@+id/tvAnswer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="답변 내용"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <!-- Unanswered Status -->
        <TextView
            android:id="@+id/tvUnanswered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="답변 대기 중..."
            android:textSize="14sp"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <!-- Answerer Info -->
        <TextView
            android:id="@+id/tvAnswererInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="답변자: 관리자"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:gravity="end"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
