<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Accordion Header -->
        <LinearLayout
            android:id="@+id/accordionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvClubName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동아리 이름"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvClubType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중앙 동아리"
                    android:textSize="12sp"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivExpandIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/arrow_down_float"
                android:contentDescription="확장/축소"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:visibility="gone"/>

        <!-- Accordion Content -->
        <LinearLayout
            android:id="@+id/accordionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvClubDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동아리 설명"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Button to go to club page -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoToClub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="동아리 페이지로 이동"
                android:textSize="14sp"
                app:icon="@android:drawable/ic_menu_send"
                app:iconGravity="start"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
