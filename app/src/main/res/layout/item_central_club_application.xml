<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 아코디언 헤더 -->
        <LinearLayout
            android:id="@+id/accordionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvClubName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동아리 이름"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvApplicationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신청일: 2024.01.01"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <!-- 신청 상태 뱃지 -->
            <TextView
                android:id="@+id/tvStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대기중"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/badge_pending"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/ivExpandIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/arrow_down_float"
                android:contentDescription="펼치기"/>

        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:visibility="gone"/>

        <!-- 아코디언 내용 -->
        <LinearLayout
            android:id="@+id/accordionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <!-- 동아리 설명 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동아리 소개"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"/>

            <TextView
                android:id="@+id/tvClubDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="동아리 설명이 여기에 표시됩니다."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>

            <!-- 설립일 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="@drawable/info_section_background"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="설립일"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/tvFoundingDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023.06.01 (200일 경과)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>

                <!-- 설립일 프로그레스바 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/budget_progress_background">

                    <View
                        android:id="@+id/viewFoundingProgressBar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/founding_progress_fill"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvFoundingProgressPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_green_dark"/>

                    <TextView
                        android:id="@+id/tvFoundingStatusMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="중앙동아리 신청 가능"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_green_dark"
                        android:gravity="end"/>

                </LinearLayout>

            </LinearLayout>

            <!-- 인원 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:background="@drawable/info_section_background"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 인원"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/tvMemberCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25/20명"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>

                <!-- 인원 프로그레스바 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/budget_progress_background">

                    <View
                        android:id="@+id/viewMemberProgressBar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/member_progress_fill"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvMemberProgressPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_green_dark"/>

                    <TextView
                        android:id="@+id/tvMemberStatusMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="중앙동아리 등록 가능!"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_green_dark"
                        android:gravity="end"/>

                </LinearLayout>

            </LinearLayout>

            <!-- 승인/거절 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReject"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="거절"
                    android:textColor="@android:color/holo_red_light"
                    app:strokeColor="@android:color/holo_red_light"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApprove"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="승인"
                    android:backgroundTint="@android:color/holo_green_dark"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
