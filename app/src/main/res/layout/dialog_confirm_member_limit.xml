<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_dialog_alert"
        android:contentDescription="경고"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="인원 제한 변경 확인"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="중앙동아리 인원 제한을 다음과 같이 변경하시겠습니까?"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        android:layout_marginTop="8dp"/>

    <!-- 변경 내용 표시 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:background="#F3E5F5"
        android:padding="16dp">

        <!-- 등록 인원 변경 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="등록 최소 인원:"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvOldRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20명"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" → "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvNewRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20명"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#9C27B0"/>

        </LinearLayout>

        <!-- 유지 인원 변경 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="유지 최소 인원:"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvOldMaintain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15명"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" → "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvNewMaintain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15명"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#9C27B0"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ 이 변경은 모든 동아리에 즉시 적용됩니다!"
        android:textSize="12sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="16dp"/>

    <!-- 확인 체크박스 -->
    <CheckBox
        android:id="@+id/cbConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="위 내용을 확인했으며, 변경에 동의합니다"
        android:textSize="14sp"
        android:layout_marginTop="16dp"/>

</LinearLayout>
