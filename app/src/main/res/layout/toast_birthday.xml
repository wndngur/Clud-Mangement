<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/toast_birthday_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivBirthdayCake"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_birthday_cake"
        android:contentDescription="생일 케이크"/>

    <TextView
        android:id="@+id/tvBirthdayMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="생일 축하합니다!"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:maxWidth="250dp"/>

</LinearLayout>
