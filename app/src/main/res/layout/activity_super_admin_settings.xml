<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="뒤로가기"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최고 관리자 설정"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Club Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Club Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tvClubName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="동아리 이름"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvClubType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="중앙동아리"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/badge_central_club"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="16dp"/>

                    <!-- Budget Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공금 현황"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/tvCurrentBudget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150,000원"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_500"/>

                        <TextView
                            android:id="@+id/tvTotalBudget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/ 500,000원"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginStart="4dp"/>

                    </LinearLayout>

                    <!-- Budget Progress -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@drawable/budget_progress_background"
                        android:layout_marginBottom="16dp">

                        <View
                            android:id="@+id/viewBudgetProgress"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/budget_progress_fill"/>

                        <TextView
                            android:id="@+id/tvBudgetPercent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="30%"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>

                    </FrameLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="16dp"/>

                    <!-- Member Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인원 현황"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvMemberCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15명 / 17명"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_500"
                        android:layout_marginBottom="8dp"/>

                    <!-- Member Progress -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@drawable/budget_progress_background"
                        android:layout_marginBottom="8dp">

                        <View
                            android:id="@+id/viewMemberProgress"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/member_progress_fill"/>

                        <TextView
                            android:id="@+id/tvMemberPercent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="88%"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvMemberStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2명 부족 (유지 불가 위험)"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_red_dark"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Carousel Image Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="캐러셀 이미지 관리"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="12dp"/>

                    <!-- Image Preview -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        app:cardCornerRadius="8dp"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/ivCarouselPreview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="#E0E0E0"
                            android:contentDescription="캐러셀 이미지 미리보기"/>

                        <TextView
                            android:id="@+id/tvCarouselTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:layout_margin="12dp"
                            android:text="동아리 이름"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:shadowColor="@android:color/black"
                            android:shadowRadius="4"/>

                    </androidx.cardview.widget.CardView>

                    <!-- Image Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEditCarouselImage"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="이미지 변경"
                            app:icon="@android:drawable/ic_menu_edit"
                            app:iconGravity="textStart"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDeleteCarouselImage"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="이미지 삭제"
                            android:textColor="@android:color/holo_red_dark"
                            app:icon="@android:drawable/ic_menu_delete"
                            app:iconGravity="textStart"
                            app:iconTint="@android:color/holo_red_dark"
                            app:strokeColor="@android:color/holo_red_dark"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Danger Zone Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFF5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="위험 영역"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아래 작업은 되돌릴 수 없습니다. 신중하게 결정해주세요."
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancelCentralClub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="중앙동아리 자격 취소"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@android:color/holo_red_dark"
                        app:icon="@android:drawable/ic_menu_close_clear_cancel"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/white"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:elevation="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
