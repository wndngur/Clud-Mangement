<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Half: Image Carousel -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpDetailImages"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="top"
        android:elevation="14dp"/>

    <!-- Guideline placeholder for compatibility -->
    <View
        android:id="@+id/guidelineHalf"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <!-- Gradient Overlay on Image -->
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="top"
        android:layout_marginTop="180dp"
        android:background="@drawable/gradient_bottom_overlay"
        android:elevation="14dp"/>

    <!-- Carousel Indicator -->
    <LinearLayout
        android:id="@+id/llIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="260dp"
        android:elevation="15dp">
        <!-- Indicator dots will be added dynamically -->
    </LinearLayout>

    <!-- Back Button -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="뒤로가기"
        android:background="@drawable/back_button_background"
        app:tint="@android:color/black"
        android:elevation="8dp"
        android:layout_gravity="top|start"/>

    <!-- Super Admin Settings Button -->
    <ImageView
        android:id="@+id/ivSuperAdminSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:src="@android:drawable/ic_menu_manage"
        android:contentDescription="최고 관리자 설정"
        android:background="@drawable/back_button_background"
        app:tint="@android:color/black"
        android:elevation="8dp"
        android:visibility="gone"
        android:layout_gravity="top|end"/>

    <!-- Edit FAB (Admin Only) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="72dp"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="편집"
        android:visibility="gone"
        android:layout_gravity="top|end"/>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <!-- Bottom Half: Content Box -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        android:layout_marginTop="276dp"
        android:layout_gravity="top">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="always">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="32dp"
                android:paddingBottom="100dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvDetailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"/>

                <!-- Divider -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="24dp"
                    android:background="?attr/colorPrimary"/>

                <!-- Description -->
                <TextView
                    android:id="@+id/tvDetailDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="설명"
                    android:textSize="16sp"
                    android:lineHeight="28dp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="24dp"/>

                <!-- Club Info Section -->
                <LinearLayout
                    android:id="@+id/llClubInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/info_section_background"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp"
                    android:visibility="gone">

                    <!-- 지도교수 -->
                    <LinearLayout
                        android:id="@+id/llProfessor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="지도교수"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/tvInfoProfessor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="-"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>

                    <!-- 학과 -->
                    <LinearLayout
                        android:id="@+id/llDepartment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="학과"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/tvInfoDepartment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="-"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>

                    <!-- 동아리방 -->
                    <LinearLayout
                        android:id="@+id/llLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="동아리방"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/tvInfoLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="-"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>

                    <!-- 설립일 -->
                    <LinearLayout
                        android:id="@+id/llFoundedAt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="설립일"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/tvInfoFoundedAt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="-"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>

                    <!-- 인원 수 -->
                    <LinearLayout
                        android:id="@+id/llMemberCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="인원 수"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/tvInfoMemberCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="-"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>

                    <!-- 설립 목적 -->
                    <LinearLayout
                        android:id="@+id/llPurpose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="설립 목적"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/tvInfoPurpose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="-"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>

                    <!-- 행사 일정 -->
                    <LinearLayout
                        android:id="@+id/llSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="행사 일정"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/tvInfoSchedule"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="-"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Feature List (Hidden) -->
                <LinearLayout
                    android:id="@+id/llFeatureList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                </LinearLayout>

                <!-- Action Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAction"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="시작하기"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="32dp"
                    app:cornerRadius="28dp"/>

                <!-- Admin Manage Button (최고 관리자 모드에서만 표시) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAdminManage"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="동아리 관리"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#FF5722"
                    android:visibility="gone"
                    app:cornerRadius="28dp"/>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
