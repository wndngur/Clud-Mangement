<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- 프로필 이미지 -->
    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/placeholder_profile"
        android:scaleType="centerCrop"
        android:background="@drawable/profile_circle_background"/>

    <!-- 채팅 정보 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <!-- 채팅방 이름과 시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvChatRoomName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="홍길동"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="오후 3:00"
                android:textSize="12sp"
                android:textColor="#888888"/>

        </LinearLayout>

        <!-- 동아리/직급 정보 -->
        <TextView
            android:id="@+id/tvClubName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="동아리명 · 직급"
            android:textSize="13sp"
            android:textColor="#888888"
            android:visibility="gone"/>

        <!-- 마지막 메시지와 읽지 않은 수 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvLastMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="마지막 메시지"
                android:textSize="14sp"
                android:textColor="#888888"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- 읽지 않은 메시지 배지 -->
            <TextView
                android:id="@+id/tvUnreadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/badge_unread"
                android:gravity="center"
                android:minWidth="20dp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <!-- 카메라 아이콘 (인스타그램 스타일) -->
    <ImageView
        android:id="@+id/ivCamera"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_camera_outline"
        android:visibility="gone"
        app:tint="#000000"/>

</LinearLayout>
