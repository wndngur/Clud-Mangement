<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Top Bar with Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="뒤로가기"
            app:tint="@android:color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="동아리 강등 관리"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"/>

        <!-- Placeholder for symmetry -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp"/>

    </LinearLayout>

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="강등할 중앙동아리를 선택하세요.\n선택한 동아리는 일반동아리로 변경됩니다."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:padding="16dp"
        android:gravity="center"
        android:background="#FFF3E0"/>

    <!-- Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- RecyclerView for Central Clubs List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCentralClubs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:clipToPadding="false"/>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/llEmptyState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:alpha="0.3"
                app:tint="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중앙동아리가 없습니다"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

    <!-- Demote Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDemote"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="강등하기"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        app:backgroundTint="@android:color/holo_orange_dark"
        app:cornerRadius="28dp"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconGravity="start"/>

</LinearLayout>
