<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="4dp">

    <!-- 날짜 구분선 -->
    <TextView
        android:id="@+id/tvDateDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="12dp"
        android:text="11월 28일 오전 8:56"
        android:textSize="12sp"
        android:textColor="#666666"
        android:visibility="gone"/>

    <!-- 보낸 메시지 (오른쪽 - 보라색) -->
    <LinearLayout
        android:id="@+id/layoutSent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingEnd="4dp"
        android:visibility="gone">

        <!-- 읽음 표시 -->
        <TextView
            android:id="@+id/tvReadStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="2dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="#888888"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvTimeSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="2dp"
            android:text="오후 3:00"
            android:textSize="11sp"
            android:textColor="#888888"/>

        <TextView
            android:id="@+id/tvMessageSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:background="@drawable/bubble_sent_purple"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:text="메시지"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:lineSpacingExtra="2dp"/>

    </LinearLayout>

    <!-- 받은 메시지 (왼쪽 - 흰색 + 프로필) -->
    <LinearLayout
        android:id="@+id/layoutReceived"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingStart="4dp"
        android:visibility="gone">

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/placeholder_profile"
            android:scaleType="centerCrop"
            android:background="@drawable/profile_circle_background"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <!-- 발신자 이름 -->
            <TextView
                android:id="@+id/tvSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="13sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMessageReceived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:background="@drawable/bubble_received_white"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="10dp"
                    android:text="메시지"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:lineSpacingExtra="2dp"/>

                <TextView
                    android:id="@+id/tvTimeReceived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="2dp"
                    android:text="오후 3:00"
                    android:textSize="11sp"
                    android:textColor="#888888"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
