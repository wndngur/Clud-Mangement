<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="중앙동아리 인원 제한 수정"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="중앙동아리 등록 및 유지에 필요한 최소 인원 수를 설정합니다."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        android:layout_marginTop="8dp"/>

    <!-- 현재 설정 표시 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#E3F2FD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 설정"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1976D2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="등록 최소 인원:"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvCurrentRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20명"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="유지 최소 인원:"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvCurrentMaintain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15명"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 새 설정 입력 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F3E5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 설정"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#7B1FA2"/>

            <!-- 등록 최소 인원 입력 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="등록 최소 인원"
                app:suffixText="명"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRegisterLimit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="3"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 유지 최소 인원 입력 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="유지 최소 인원"
                app:suffixText="명"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMaintainLimit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="3"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 경고 메시지 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ 유지 인원은 등록 인원보다 작거나 같아야 합니다.\n변경 사항은 즉시 적용됩니다."
        android:textSize="12sp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginTop="16dp"/>

</LinearLayout>
