<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClubManagement">

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Settings Activity -->
        <activity
            android:name=".LoginSettingsActivity"
            android:exported="false"
            android:label="로그인 설정"
            android:parentActivityName=".LoginActivity"/>

        <!-- Admin Login Activity -->
        <activity
            android:name=".AdminLoginActivity"
            android:exported="false"
            android:label="관리자 로그인"
            android:parentActivityName=".LoginSettingsActivity"/>

        <!-- Admin Sign Up Activity -->
        <activity
            android:name=".AdminSignUpActivity"
            android:exported="false"
            android:label="관리자 회원가입"
            android:parentActivityName=".AdminLoginActivity"/>

        <!-- Sign Up Activity -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:label="회원가입"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".LoginActivity"/>

        <!-- Admin Main Activity -->
        <activity
            android:name=".AdminMainActivity"
            android:exported="false"
            android:label="관리자 메인"/>

        <!-- Main Activity (NEW) -->
        <activity
            android:name=".MainActivityNew"
            android:exported="false"/>

        <!-- Settings Activity (Main) -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="메인 설정"
            android:parentActivityName=".MainActivityNew"/>

        <!-- Club Settings Activity -->
        <activity
            android:name=".activities.ClubSettingsActivity"
            android:exported="false"
            android:label="동아리 설정"
            android:parentActivityName=".activities.ClubMainActivity"/>

        <!-- Detail Activity -->
        <activity
            android:name=".activities.DetailActivity"
            android:exported="false"
            android:label="상세 정보"/>

        <!-- Member Registration Activity -->
        <activity
            android:name=".activities.MemberRegistrationActivity"
            android:exported="false"
            android:label="회원 가입"
            android:windowSoftInputMode="adjustResize"/>

        <!-- Club Main Activity -->
        <activity
            android:name=".activities.ClubMainActivity"
            android:exported="false"
            android:label="동아리 메인"/>

        <!-- Club Info Activity -->
        <activity
            android:name=".activities.ClubInfoActivity"
            android:exported="false"
            android:label="동아리 정보"
            android:parentActivityName=".activities.ClubMainActivity"/>

        <!-- Club Recommend Activity -->
        <activity
            android:name=".activities.ClubRecommendActivity"
            android:exported="false"
            android:label="동아리 추천"/>

        <!-- Club List Activity -->
        <activity
            android:name=".activities.ClubListActivity"
            android:exported="false"
            android:label="일반 동아리 목록"/>

        <!-- My Clubs Activity -->
        <activity
            android:name=".activities.MyClubsActivity"
            android:exported="false"
            android:label="내가 가입한 동아리"/>

        <!-- Budget History Activity -->
        <activity
            android:name=".activities.BudgetHistoryActivity"
            android:exported="false"
            android:label="공금 내역"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".activities.ClubMainActivity"/>

        <!-- Carousel Edit Activity -->
        <activity
            android:name=".activities.CarouselEditActivity"
            android:exported="false"
            android:label="포스터 사진변경"
            android:parentActivityName=".activities.ClubSettingsActivity"/>

        <!-- Club Description Edit Activity -->
        <activity
            android:name=".activities.ClubDescriptionEditActivity"
            android:exported="false"
            android:label="동아리 설명 수정"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".activities.ClubSettingsActivity"/>

        <!-- Member Management Activity -->
        <activity
            android:name=".activities.MemberManagementActivity"
            android:exported="false"
            android:label="명단 관리"
            android:parentActivityName=".activities.ClubSettingsActivity"/>

        <!-- Member List Activity (일반 사용자용) -->
        <activity
            android:name=".activities.MemberListActivity"
            android:exported="false"
            android:label="부원 명단"
            android:parentActivityName=".activities.ClubMainActivity"/>

        <!-- Central Club Applications Activity (최고 관리자용) -->
        <activity
            android:name=".activities.CentralClubApplicationsActivity"
            android:exported="false"
            android:label="중앙동아리 신청 명단"
            android:parentActivityName=".SettingsActivity"/>

        <!-- Club Info Edit Activity -->
        <activity
            android:name=".activities.ClubInfoEditActivity"
            android:exported="false"
            android:label="동아리 정보 수정"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".activities.ClubSettingsActivity"/>

        <!-- Super Admin Settings Activity -->
        <activity
            android:name=".activities.SuperAdminSettingsActivity"
            android:exported="false"
            android:label="최고 관리자 설정"
            android:parentActivityName=".activities.DetailActivity"/>

        <!-- Demote Central Club Activity -->
        <activity
            android:name=".activities.DemoteCentralClubActivity"
            android:exported="false"
            android:label="동아리 강등 관리"
            android:parentActivityName=".activities.SuperAdminSettingsActivity"/>

        <!-- Edit Requests Activity (동아리 관리자용 수정 요청 확인) -->
        <activity
            android:name=".activities.EditRequestsActivity"
            android:exported="false"
            android:label="수정 요청 목록"
            android:parentActivityName=".activities.ClubSettingsActivity"/>

        <!-- Central Club Applications Activity (최고 관리자용 중앙동아리 신청 목록) -->
        <activity
            android:name=".activities.CentralApplicationsActivity"
            android:exported="false"
            android:label="중앙동아리 신청 목록"
            android:parentActivityName=".SettingsActivity"/>

        <!-- Club Establish Activity (일반동아리 설립 신청) -->
        <activity
            android:name=".activities.ClubEstablishActivity"
            android:exported="false"
            android:label="동아리 설립 신청"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".SettingsActivity"/>

        <!-- Club Approval List Activity (최고 관리자용 일반동아리 설립 승인) -->
        <activity
            android:name=".activities.ClubApprovalListActivity"
            android:exported="false"
            android:label="일반동아리 설립 승인"
            android:parentActivityName=".SettingsActivity"/>

        <!-- Club Delete Activity (최고 관리자용 동아리 삭제) -->
        <activity
            android:name=".activities.ClubDeleteActivity"
            android:exported="false"
            android:label="동아리 삭제"
            android:parentActivityName=".SettingsActivity"/>

        <!-- Old Main Activity (Backup) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Signature Activities -->
        <activity
            android:name=".activities.SignaturePadActivity"
            android:exported="false"
            android:label="서명 패드" />

        <activity
            android:name=".activities.SignatureUploadActivity"
            android:exported="false"
            android:label="서명 업로드" />

        <!-- Document Activities -->
        <activity
            android:name=".activities.DocumentGenerateActivity"
            android:exported="false"
            android:label="문서 생성" />

        <!-- Signature Activity (서명 캡처) -->
        <activity
            android:name=".activities.SignatureActivity"
            android:exported="false"
            android:label="서명" />

        <!-- PDF Generation Activity (PDF 생성) -->
        <activity
            android:name=".activities.PdfGenerationActivity"
            android:exported="false"
            android:label="신청서 PDF 생성"
            android:parentActivityName=".activities.ClubSettingsActivity"/>

        <!-- Notice List Activity (동아리 공지 목록) -->
        <activity
            android:name=".activities.NoticeListActivity"
            android:exported="false"
            android:label="공지사항"
            android:parentActivityName=".activities.ClubMainActivity"/>

        <!-- Notice Detail Activity (공지 상세) -->
        <activity
            android:name=".activities.NoticeDetailActivity"
            android:exported="false"
            android:label="공지 상세"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".activities.NoticeListActivity"/>

        <!-- Notice Write Activity (공지 작성/수정) -->
        <activity
            android:name=".activities.NoticeWriteActivity"
            android:exported="false"
            android:label="공지 작성"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".activities.NoticeListActivity"/>

        <!-- Notification List Activity (알림 목록) -->
        <activity
            android:name=".activities.NotificationListActivity"
            android:exported="false"
            android:label="알림"
            android:parentActivityName=".activities.ClubMainActivity"/>

        <!-- Q&A Activity (Q&A / FAQ) -->
        <activity
            android:name=".activities.QnAActivity"
            android:exported="false"
            android:label="Q&amp;A / FAQ"
            android:parentActivityName=".activities.DetailActivity"/>

        <!-- Ask Question Activity (질문하기) -->
        <activity
            android:name=".activities.AskQuestionActivity"
            android:exported="false"
            android:label="질문하기"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".activities.QnAActivity"/>

        <!-- Q&A Detail Activity (질문 상세) -->
        <activity
            android:name=".activities.QnADetailActivity"
            android:exported="false"
            android:label="질문 상세"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".activities.QnAActivity"/>

        <!-- Chat Activity (채팅) -->
        <activity
            android:name=".activities.ChatActivity"
            android:exported="false"
            android:label="채팅"/>

        <!-- Chat List Activity (목록) -->
        <activity
            android:name=".activities.ChatListActivity"
            android:exported="false"
            android:label="목록"/>

        <!-- Chat Detail Activity (채팅 상세) -->
        <activity
            android:name=".activities.ChatDetailActivity"
            android:exported="false"
            android:label="채팅"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".activities.ChatActivity"/>

        <!-- FileProvider for sharing files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>